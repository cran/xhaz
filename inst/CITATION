citHeader("To cite `xhaz` in publications use:")
 year <- "2022"
 vers <- note <- sprintf(" R package version %s", meta$Version)

citEntry(
  entry    = "Manual",
  title    = "xhaz: Excess Hazard Modelling Taking into Account Inappropriate Expected Mortality Rates",
       doi = "10.5281/zenodo.7010710",
  author   = personList(as.person("Juste Goungounga"),
                        as.person("Darlin Mba"),
                        as.person("Nathalie Graffeo"),
                        as.person("Roch Giorgi")),
     year = year,
      note = vers,
       textVersion = paste0("Juste Goungounga, Darlin Mba, Nathalie Graffeo,  Roch Giorgi, (", year, ").",
  "xhaz:  Excess Hazard Modelling Taking into Account Inappropriate Expected Mortality Rates.",
  note, ". Zenodo",
  ". DOI: 10.5281/zenodo.7010710. https://CRAN.R-project.org/package=xhaz")
)



bibentry(bibtype = "Manual",
         title = "{xhaz}: Excess Hazard Modelling Taking into Account Inappropriate Expected Mortality Rates",
         author = c(as.person("Juste Goungounga"),
                        as.person("Darlin Mba"),
                        as.person("Nathalie Graffeo"),
                        as.person(" Roch Giorgi")),
         year = year,
         note = note,
    publisher = "Zenodo",
          doi = "10.5281/zenodo.7010710",
	        url = "https://CRAN.R-project.org/package=xhaz")

textVersion = paste0("Juste Goungounga, Darlin Mba, Nathalie Graffeo,  Roch Giorgi, (", year, ").",
  "xhaz:  Excess Hazard Modelling Taking into Account Inappropriate Expected Mortality Rates.",
  note, ". Zenodo",
  ". DOI: 10.5281/zenodo.7010710. https://CRAN.R-project.org/package=xhaz")
